@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html>
<head>
    <title>JobCentrum site</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw==" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A==" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.1/css/all.css" intergrity="sha384-xxzQGERXS00kBmZW/6qxqJPyxW3UR0BPsL4c8ILaIWXva5kFi7TxkIIaMiKtqV1Q" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <meta name="viewport" content="width-device-width, initial-scale=1">
</head>
<body>
    <!--menu bar codes -->
    <div class="menu-bar" style=" position: fixed; width:100%; overflow: hidden;">
        @if ((!string.IsNullOrEmpty(Context.Session.GetString("Company_Address"))))
        {
            <h1><a asp-controller="Categorie" asp-action="Index" style="text-decoration:none; color:white"><span>Job</span>Centrum</a></h1>
            <ul style="font-size: 17px; margin-right: 30px; margin-top:3px">
                @*<li class="actieve"><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home</a></li>*@
                <li><a href="#About"><i class="fas fa-users"></i>About us</a></li>
                <li><a asp-controller="Categorie" asp-action="Index"><i class="fas fa-user"></i>Categories</a></li>
                <li><a asp-controller="Job" asp-action="Index"><i class="fas fa-clone"></i>Jobs</a></li>
            </ul>
            <ul style="margin-left: 200px; font-size:17px; margin-top:3px">
                <li class="actieve1"><a asp-controller="Account" asp-action="EditJobPublisher"><i class="fas fa-user-edit"></i>Profile</a></li>
                <li class="actieve1"><a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
            </ul>
        }
        else if (!string.IsNullOrEmpty(Context.Session.GetString("Hobby")))
        {
            <h1><a asp-controller="Home" asp-action="Index" style="text-decoration:none; color:white"><span>Job</span>Centrum</a></h1>
            <ul style="font-size: 17px; margin-right: 30px; margin-top:3px">
                <li class="actieve"><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home</a></li>
                <li><a asp-controller="Home" asp-action="Applications"><i class="fas fa-user"></i>Applies</a></li>
                <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-clone"></i>My List</a></li>
                <li><a href="#About"><i class="fas fa-users"></i>About us</a></li>
            </ul>
            <ul style="margin-left: 200px; font-size:17px;margin-top:3px ">
                <li class="actieve1"><a asp-controller="Account" asp-action="EditJobSeeker"><i class="fas fa-user-edit"></i>Profile</a></li>
                <li class="actieve1"><a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
            </ul>
        }
        else
        {
            <h1><a asp-controller="Home" asp-action="Index" style="text-decoration:none; color:white"><span>Job</span>Centrum</a></h1>
            <ul style="font-size:17px; margin-right: 30px; margin-top:3px">
                <li class="actieve"><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home</a></li>
                <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-user"></i>Search</a></li>
                <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-clone"></i>Contact</a></li>
                <li><a href="#About"><i class="fas fa-users"></i>About us</a></li>
            </ul>
            <ul style="margin-left: 200px; font-size:17px; margin-top:3px">
                <li class="actieve1"><a asp-controller="Home" asp-action="ChoiceAccount"><i class="fas fa-user-plus"></i>Register</a></li>
                <li class="actieve1"><a asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i>Login</a></li>
            </ul>
        }
    </div>
    <!--//menu bar codes -->
    <div style="margin-top: 100px;">
        @RenderBody();
    </div>
    <!-- //blog text -->
    <!-- footer--->
    <div class="footer">
        <div class="footer-content">
            <div class="footer-section about">
                <h1 class="logo-text"><span>Job</span>Centrum</h1>
                <br>
                <p>Welcome everyone to JobCentrum</p>
                <br>
                <div class="contact">
                    <span><i class="fas fa-phone"></i> &nbsp; 06123425678 </span>
                    <span><i class="fas fa-envelope"></i> &nbsp; info@JobCentrum.nl </span>
                </div>
                <br>
                <div class="socials">
                    <a href="https://www.facebook.com/mohammedaljader19/"><i class="fab fa-facebook"></i></a>
                    <a href="https://www.instagram.com/mo.sy06/"><i class="fab fa-instagram"></i></a>
                    <a href="https://www.twitter.com/mohammedaljade5/"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.youtube.com/channel/UCl8qZThhl7DX2RMNkUJ6iRg?view_as=subscriber/"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
            <div class="footer-section links">
                <h2>Quick links</h2>
                <br>
                <ul>
                    <li><a href="#"> Links </a></li>
                    <li><a href="#"> Team</a></li>
                    <li><a href="#"> Mentores</a></li>
                    <li> <a href="#"> Gallery</a></li>
                </ul>
            </div>
            <div class="footer-section contact-form">
                <h2>Contact us</h2>
                <br>
                <form action="index.html" method="post">
                    <input type="email" name="email" class="text-input contact-input" placeholder="Your email adress...">
                    <textarea name="message" class="text-input contact-input" placeholder="Your message"></textarea>
                    <button type="submit" class="btn2 btn-big contact-btn"> Send it..<i class="fas fa-envelope"></i> </button>


                </form>
            </div>
        </div>
        <div class="footer-bottom">
            &copy; JobCentrum 2021 | Designed by Mohammed Aljader
        </div>
    </div>
    <!-- //footer--->
    <!--java script codes -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!--//java script codes -->

</body>
</html>