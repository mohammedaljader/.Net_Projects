@model JobCentrum_Website.Models.CategorieViewModel

@{
    ViewData["Title"] = "Edit";
}

<div style="margin-left: 200px;">
    <h1>Edit Categorie</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label hidden asp-for="Categorie_Id" class="control-label"></label>
                    <input asp-for="Categorie_Id" class="form-control" readonly  hidden/>
                    <span  asp-validation-for="Categorie_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categorie_name" class="control-label"></label>
                    <input asp-for="Categorie_name" class="form-control" />
                    <span asp-validation-for="Categorie_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categorie_description" class="control-label"></label>
                    <input asp-for="Categorie_description" class="form-control" />
                    <span asp-validation-for="Categorie_description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
