@model IEnumerable<JobCentrum_Website.Models.CategorieViewModel>

@{
    ViewData["Title"] = "Index";
}

<div style="margin-left: 200px; min-height: 500px;">
    <h1>Categories List</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Categorie_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categorie_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categorie_description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.Categorie_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categorie_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categorie_description)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Categorie_Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Categorie_Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Categorie_Id })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <p style="color: red;">No Categories founded..</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>