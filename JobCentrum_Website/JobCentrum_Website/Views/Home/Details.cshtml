@model JobCentrum_Website.Models.JobViewModel

@{
    ViewData["Title"] = "Details";
}

<div style="margin-left: 200px;">
    <h1>Details</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2" hidden>
                @Html.DisplayNameFor(model => model.Job_Id)
            </dt>
            <dd class="col-sm-10" hidden>
                @Html.DisplayFor(model => model.Job_Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Job_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Job_description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_image)
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/@Html.DisplayFor(model=>model.Job_image)"
                     class="thumbnail"
                     style="width:128px; height:128px;" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Job_location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categorie_ID)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.categorie.Categorie_name
            </dd>
        </dl>
    </div>
    <div>
        @*<a class="btn btn-success" asp-action="Apply">Apply</a>*@
        @Html.ActionLink("Apply", "Apply", new { id = Model.Job_Id }, new { @class = "btn btn-success" })
        <a class="btn btn-dark" asp-action="Index">Home</a>
    </div>
</div>