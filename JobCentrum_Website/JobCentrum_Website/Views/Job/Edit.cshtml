@model JobCentrum_Website.Models.EditJobViewModel

@{
    ViewData["Title"] = "Edit";
}

<div style="margin-left: 200px;">
    <h1>Edit Job</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label hidden asp-for="Job_Id" class="control-label"></label>
                    <input hidden asp-for="Job_Id" class="form-control" readonly />
                    <span asp-validation-for="Job_Id" class="text-danger"></span>
                </div>
                <input hidden asp-for="ExistingImage" />
                <div class="form-group">
                    <label asp-for="Job_name" class="control-label"></label>
                    <input asp-for="Job_name" class="form-control" />
                    <span asp-validation-for="Job_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job_description" class="control-label"></label>
                    <textarea asp-for="Job_description" class="form-control"></textarea>
                    <span asp-validation-for="Job_description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="image" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="image" type="file" class="custom-file-input" id="customFileLang" lang="en">
                        <label class="custom-file-label" for="customFileLang">Click here to change the file....</label>
                    </div>
                    <span asp-validation-for="image" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 30px">
                    <img src="~/images/@Html.DisplayFor(model => model.ExistingImage)" class="img-thumbnail" style="width:48px; height:48px" />
                </div>
                <div class="form-group">
                    <label asp-for="Job_location" class="control-label"></label>
                    <textarea asp-for="Job_location" class="form-control"></textarea>
                    <span asp-validation-for="Job_location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categorie_ID" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Categorie_ID, (List<SelectListItem>)ViewBag.IdCategorie, "Select categorie", htmlAttributes: new { @class = "form-control" })
                    <span asp-validation-for="Categorie_ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


