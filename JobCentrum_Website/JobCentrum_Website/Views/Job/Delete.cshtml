@model JobCentrum_Website.Models.JobViewModel

@{
    ViewData["Title"] = "Delete";
}

<div style="margin-left: 200px;">
    <h1>Delete</h1>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div>
        <input hidden asp-for="Job_image" />
        <hr />
        <dl class="row">
            <dt class="col-sm-2" hidden>
                @Html.DisplayNameFor(model => model.Job_Id)
            </dt>
            <dd class="col-sm-10" hidden>
                @Html.DisplayFor(model => model.Job_Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Job_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Job_description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_image)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.Job_image)*@
                <img src="~/images/@Html.DisplayFor(model => model.Job_image)" class="img-thumbnail" style="width:48px; height:48px" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Job_location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Job_location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categorie_ID)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.categorie.Categorie_name
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>